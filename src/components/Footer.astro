const footerSections = [
  /* {
    title: "Product",
    links: ["Features", "Pricing", "Security"]
  }, */
  {
    title: "Empresa",
    stitle1: "Sobre Nosotros",
    link1: "#",
    stitle2: "Contacto",
    link2: "#"
  },
  /* {
    title: "Resources",
    links: ["Blog", "Help Center", "API Docs"]
  }, */
  {
    title: "Legal",
    stitle1: "Privacidad y",
    link1: "/legales",
    stitle2: "Términos de Uso",
    link2: "/legales"
  }
