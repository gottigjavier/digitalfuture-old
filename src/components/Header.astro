<style>
  /* Para theme */
  code {
    font-style: italic;
    border-radius: 5px;
    padding: 2px;
  }

  .theme {
    align-self: center;
  }
  
  /* Estilos básicos para la barra de navegación */
    .navbar {
      display: flex;
      justify-content: right;
      align-items: top;
      padding: 3rem 1rem;
      background-color: #121211;
      color: #fff;
    }
    .nav-links {
      display: flex;
      gap: 1rem;
    }
    .nav-links a {
      color: #fff;
      text-decoration: none;
      padding: 0.5rem 1rem;
    }
    .nav-links a:hover {
      background-color: #555;
    }
    .menu-toggle {
      display: none;
      cursor: pointer;
      font-size: 1.5rem;
    }
    .mobile-menu {
      display: none;
      flex-direction: column;
      gap: 1rem;
    }
    .mobile-menu.active {
      display: flex;
    }

    .logo {
      position: absolute;
      width: 8vmax;
      margin-right: 88%;
      align-self: center;
    }
    
    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }
      .menu-toggle {
        display: block;
      }
    }

    @media (max-width: 768px) and (orientation: portrait) {
      .logo {
        margin-right: 75%;
      }
    }
    </style>
